<div>
    <h2>
        All Foods are shown here
    </h2>
</div>

@{
    <h2>@Model.CurrentCategory</h2>
    foreach(var food in Model.Foods)
    {
       <div class="col-sm-4 col-lg-4 col-md-4">
       <div class="thumbnail">
            <img src="@food.ImageUrl" alt="" height="400" width="400"/>
            <div class="caption">
            <h3 class="pull-right">@food.Price.ToString()</h3>
            <h3>
             <a>@food.Name</a>
            </h3>
            <p>@food.ShortDescription</p>
            </div>
       </div>
       
       </div>
    }
}
