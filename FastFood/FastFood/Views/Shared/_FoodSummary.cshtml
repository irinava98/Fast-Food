@model Food

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img width="400" height="300" src="@Model.ImageUrl" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Food" asp-action="Details" asp-route-drinkId="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-foodId="@Model.Id">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>